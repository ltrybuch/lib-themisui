{
  "compilerOptions": {
    "noImplicitAny": true,
    "sourceMap": true,
    "target": "es5",
    "types": [
      "webpack-env"
    ],
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "compileOnSave": false
  },
  "include": [
    "src/**/*",
    "test/spec_modules/**/*"
  ]
}
